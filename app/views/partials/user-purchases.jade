.container
    table(width="500px", class="table table-striped table-bordered table-condensed")
        thead
        tr
            th Product
            th Date
            th Paid
            th Shipped
            th Details
            tbody
                tr(ng-repeat="purchase in purchases | orderBy: '-date'")
                    td
                        | {{ purchase.product }}
                    td
                        | {{ purchase.purchaseDate | date: 'dd/MM/yyyy' }}
                    td
                        | {{ purchase.paid ? 'Paid' : 'Not paid'}}
                    td
                        | {{ purchase.shipped ? 'Shipped' : 'Not shipped'}}
                    td
                        a(href="#/purchases/{{ purchase._id }}")
                            | Details